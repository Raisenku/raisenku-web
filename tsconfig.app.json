{
  "extends": "@vue/tsconfig/tsconfig.web.json",

  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],

  "exclude": ["src/**/tests/*"],

  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "skipLibCheck": false,

    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],

    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
